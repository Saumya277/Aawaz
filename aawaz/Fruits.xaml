<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aawaz.Fruits"
             BackgroundColor="#71d0e8">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" >
            <Label Text="FRUITS" TextColor="Black" FontSize="Large" FontFamily="Arial" 
                   HorizontalOptions="Center" FontAttributes="Bold,Italic"/>
            <Grid HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ImageButton Source="apple.png"
                             BackgroundColor="MediumPurple"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand"
                             WidthRequest="250"
                             HeightRequest="250"
                             Grid.Row="0"
                             Grid.Column="0"
                             Clicked="Button_Clicked">
                </ImageButton>

                <ImageButton Source="banana.png"
                             BackgroundColor="CornflowerBlue"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand"
                             WidthRequest="250"
                             HeightRequest="250"
                             Grid.Row="0"
                             Grid.Column="1"
                             Clicked="Button_Clicked1">
                </ImageButton>

                <ImageButton Source="mango.png"
                             BackgroundColor="MediumPurple"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand"
                             WidthRequest="250"
                             HeightRequest="250"
                             Grid.Row="1"
                             Grid.Column="0"
                             Clicked="Button_Clicked2">
                </ImageButton>
                <ImageButton Source="kiwi.png"
                             BackgroundColor="CornflowerBlue"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand"
                             WidthRequest="250"
                             HeightRequest="250"
                             Grid.Row="1"
                             Grid.Column="1"
                             Clicked="Button_Clicked3">
                </ImageButton>

                <ImageButton Source="strawberry.png"
                             BackgroundColor="MediumPurple"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand"
                             WidthRequest="250"
                             HeightRequest="250"
                             Grid.Row="2"
                             Grid.Column="0"
                             Clicked="Button_Clicked4">
                </ImageButton>
                <ImageButton Source="pineapple.png"
                             BackgroundColor="CornflowerBlue"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand"
                             WidthRequest="250"
                             HeightRequest="250"
                             Grid.Row="2"
                             Grid.Column="1"
                             Clicked="Button_Clicked5">
                </ImageButton>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>